generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
  moduleFormat    = "esm"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model Subscription {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  email     String    @unique
  city      String
  frequency Frequency
  confirmed Boolean   @default(false)
}

enum Frequency {
  hourly
  daily
}
